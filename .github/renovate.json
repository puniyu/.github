{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["helpers:pinGitHubActionDigestsToSemver", ":semanticCommits"],
  "rangeStrategy": "bump",
  "timezone": "Asia/Shanghai",
  "schedule": ["at any time"],
  "labels": ["dependencies"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^rust-toolchain\\.toml?$/"],
      "matchStrings": [
        "channel\\s*=\\s*\"(?<currentValue>\\d+\\.\\d+(\\.\\d+)?)\""
      ],
      "depNameTemplate": "rust",
      "packageNameTemplate": "rust-lang/rust",
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["pnpm"],
      "allowedVersions": "10.23.0"
    },
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "24.1.0"
    },
    {
      "matchDatasources": ["node-version"],
      "matchDepNames": ["node"],
      "allowedVersions": "24.12.0"
    },
    {
      "groupName": "github actions",
      "matchManagers": ["github-actions"],
      "rangeStrategy": "auto",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "rust toolchain",
      "matchManagers": ["custom.regex"],
      "matchDepNames": ["rust"],
      "automerge": true,
      "automergeType": "pr",
      "automergeSchedule": ["at any time"]
    },
    {
      "groupName": "napi",
      "matchDatasources": ["crate", "npm"],
      "matchPackageNames": [
        "napi",
        "napi-build",
        "napi-derive",
        "@napi-rs/cli"
      ],
      "rangeStrategy": "auto",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "tauri",
      "matchDatasources": ["crate", "npm"],
      "matchPackageNames": [
        "tauri",
        "tauri-build",
        "@tauri-apps/**",
        "tauri-plugin-**"
      ],
      "rangeStrategy": "auto",
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "rust crates",
      "matchDatasources": ["crate"],
      "rangeStrategy": "auto"
    },
    {
      "groupName": "node packages",
      "matchDatasources": ["npm"],
      "rangeStrategy": "auto"
    }
  ]
}
